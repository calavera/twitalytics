<div>
  <input type="text" size="80"/>
  <button>Submit</button>
</div>
<div>
  <table>
    <tr>
      <th>Date</th>
      <th>Status</th>
    </tr>
    <% for s in @statuses %>
        <tr>
          <td><%= s[:created_at] %></td>
          <td><%= s[:status_text] %></td>
        </tr>
    <% end %>
    <% if @statuses.empty? %>
        <tr>
          <td colspan="2">No updates</td>
        </tr>
    <% end %>
  </table>
</div>
